{
    "name": "jay-wolfe-eleventy-dev-blog",
    "version": "1.0.0",
    "description": "A brutalist blog site built by Jay Wolfe.",
    "keywords": [
        "11ty",
        "brutalism",
        "blog",
        "vanilla"
    ],
    "author": "Jay Wolfe",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf _site",
        "start": "NODE_ENV=dev run-p -l clean start:*",
        "start:webpack": "webpack $npm_package_config_webpack_args --watch",
        "start:eleventy": "DEBUG=Eleventy* eleventy --serve --port=3000",
        "build": "GA_TRACKER_ID_PROD=UA-140018216-1 NODE_ENV=prod run-s -l clean build:*",
        "build:webpack": "webpack $npm_package_config_webpack_args",
        "build:eleventy": "eleventy",
        "build1:purge": "npx purgecss $npm_package_config_purgecss_args",
        "build:split-css": "node src/scripts/tasks/split_css.js",
        "build:critical-path": "node src/scripts/tasks/critical_path.js",
        "build:stats": "node src/scripts/tasks/stats.js"
    },
    "config": {
        "webpack_args": "--config webpack.config.js --display-error-details",
        "purgecss_args": "--css _site/**/*.css --content _site/**/*.html --output _site"
    },
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
        "@babel/cli": "^7.12.1",
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "babel-loader": "^8.1.0",
        "babel-plugin-transform-es2015-modules-commonjs-simple": "^6.7.4",
        "core-js": "^3.6.5",
        "critical": "^2.0.6",
        "cross-env": "^7.0.3",
        "css-loader": "^5.0.0",
        "cssnano": "^4.1.10",
        "dotenv-webpack": "^4.0.0",
        "glob": "^7.1.6",
        "html-minifier": "^4.0.0",
        "html-webpack-plugin": "^4.5.0",
        "html-webpack-pug-plugin": "^2.0.0",
        "markdown-it": "^12.0.2",
        "markdown-it-attrs": "^4.0.0",
        "mathsass": "^0.11.0",
        "mini-css-extract-plugin": "^1.2.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "postcss": "^8.1.2",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.7.0",
        "pug": "^2.0.4",
        "pug-loader": "^2.4.0",
        "purgecss": "^3.0.0",
        "sass-loader": "^7.3.1",
        "terser-webpack-plugin": "^4.2.3",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12",
        "webpack-merge": "^5.1.4"
    },
    "dependencies": {
        "@11ty/eleventy-plugin-rss": "^1.1.0",
        "@quasibit/eleventy-plugin-sitemap": "^2.0.4",
        "eleventy-plugin-time-to-read": "^1.0.0",
        "markdown-it-anchor": "^7.0.2"
    }
}
